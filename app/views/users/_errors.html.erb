<% if edit_user(@id).errors.any? %>
<div id="error_explanation">

   <h2>
      <%= pluralize(edit_user(@id).errors.count, "error") %>
      prohibited this user from being saved:
   </h2>

   <ul>
      <% edit_user(@id).errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
      <% end %>
   </ul>
</div>
<% end %> 