<!DOCTYPE html>
<html>
  <head>
    <title>Tablecloth</title>
    <style>
    
    body{
      font-family: Helvetica, sans-serif;
    }
    
    header {
      overflow: hidden;
      background-color: #ffe070;
      padding: 20px 10px;
      z-index: 1;

    }
    .sidenav {
      overflow: visible;
      background-color: #333;
      height: 100vh;
      width: 150px;
      z-index: -1;

      top: 0;
      left: 0;
      overflow-x: hidden;
      padding-top: 20px;
    }
    .header-right {
      float: right;
    }
    .header-top {
      float: top;
    }
    .section-right {
      float: right;
    }
    .section-left {
      float: left;
    }
    .sidenav a {
      float: left;
      color: #f2f2f2;
      text-align: left;
      padding: 14px 16px;
      text-decoration: none;
    }
    
    .sidenav a:hover {
      background-color: #fff;
      width: 100%;
      color: black;

    }
    
    .sidenav a.active {
      background-color: #04AA6D;
      color: white;
      width: 100%;
    }

    .main {
      margin-left: 150px; /* Same as the width of the sidenav */
      font-size: 28px; /* Increased text to enable scrolling */
      padding: 0px 10px;
    }
    @media screen and (max-height: 450px) {
      .sidenav {padding-top: 15px;}
      .sidenav a {font-size: 18px;}
    }
    .notice {
      margin: auto;
      border-radius: 10px;
      width: 30%;
      left: 50%;
      text-align: center;
      background-color: #d4ffe6;
    }
    .error {
      margin: auto;
      border-radius: 10px;
      width: 30%;
      left: 50%;
      text-align: center;
      background-color: #ffd4d4;
    }

  </style>

    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>







<header>
        <h1><%=link_to 'Tablecloth', home_path%></h1>
</header>

<body>



  <div class="section-left">
    <% if logged_in? %>
      <div class="sidenav">
        <%= link_to 'Account', user_path(current_user.id)%>
        <%if current_user.employee_type == "manager" %>
        <%= link_to 'Employees', employees_path%>
        <% end %>
        <%= link_to 'Tables', {controller: "tables", action: "index"}%>
        <%if current_user.employee_type == "manager" %>
        <%= link_to 'Menu Items', {controller: "menuitems", action: "index"}%>
        <%end%>
        <%= link_to 'Log Out', logout_path, method: "delete"%></div>
      </div>
    <% end %>
    </div>



  <div class="main">
    <div>
      <p>
        <% if flash[:notice] %>
          <% flash[:notice].each do |notice| %>
            <p><div class="notice"><%= notice %></div></p>
          <%end%>
        <% end %>

        <% if flash[:error] %>
          <% flash[:error].each do |error| %>
            <p><div class="error"><%= error %></div></p>
          <%end%>
        <% end %>
      </p>
    </div>
    <%= yield %>
  </div>

</body>

</html>
